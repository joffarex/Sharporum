@model Violetum.IdentityServer.Models.RegisterViewModel

@if (ViewContext.ModelState.IsValid == false)
{
    <div class="alert alert-danger">
        <strong>Error</strong>
        <div asp-validation-summary="All" class="danger"></div>
    </div>
}

<form asp-controller="Auth" asp-action="Register" method="post">
    <input type="hidden" asp-for="ReturnUrl"/>
    <div>
        <label>Username</label>
        <input asp-for="Username"/>
    </div>
    <div>
        <label>Email</label>
        <input asp-for="Email"/>
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password"/>
    </div>
    <div>
        <label>Password</label>
        <input asp-for="ConfirmPassword"/>
    </div>
    <div>
        <button type="submit">Sign Up</button>
    </div>
</form>

<a asp-controller="Auth" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">Back to Login</a>