@using System.Security.Claims
@using Microsoft.AspNetCore.Authentication
<h2>Claims</h2>
<a href="http://localhost:5000/Account/UserInfo/@User.Claims.Where(x => x.Type == "sub").Select(x => x.Value).FirstOrDefault()">
    User Info
</a>

<dl>
    @foreach (Claim claim in User.Claims)
    {
        <dt>@claim.Type</dt>
        <dd>@claim.Value</dd>
    }
</dl>

<h2>Properties</h2>

<dl>
    @foreach (KeyValuePair<string, string> prop in (await Context.AuthenticateAsync()).Properties.Items)
    {
        <dt>@prop.Key</dt>
        <dd>@prop.Value</dd>
    }
</dl>