    "version": "0.2.0",
    "configurations": [
        // Web
        {
            "name": "Web",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build:web",
            "program": "${workspaceFolder}/src/Violetum.Web/bin/Debug/netcoreapp3.1/Violetum.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Violetum.Web",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "^\\s*Now listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        // API
        {
            "name": "API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build:api",
            "program": "${workspaceFolder}/src/Violetum.API/bin/Debug/netcoreapp3.1/Violetum.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Violetum.API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "^\\s*Now listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        // IdentityServer
        {
            "name": "IdentityServer",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build:identity-server",
            "program": "${workspaceFolder}/src/Violetum.IdentityServer/bin/Debug/netcoreapp3.1/Violetum.IdentityServer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Violetum.IdentityServer",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "^\\s*Now listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}